<%= form_with model: [article, comment] do |form| %>
  <div>
    <%= form.label :commenter %>
    <%= form.text_field :commenter %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select :status, Visible::VALID_STATUSES, selected: comment.status || 'public' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>